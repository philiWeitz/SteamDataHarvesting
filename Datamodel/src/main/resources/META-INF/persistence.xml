<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	<persistence-unit name="steam-data-harvesting" transaction-type="RESOURCE_LOCAL">
	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<properties>
			<!-- Database connection -->
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:steam-data-harvesting" />
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />
			
			<!-- Postgresql example -->
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/????"/> -->
			<!-- <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/> -->
			<!-- <property name="javax.persistence.jdbc.user" value="????"/> -->
			<!-- <property name="javax.persistence.jdbc.password" value="????"/> -->


			<!-- Thread Pool definition -->
		    <property name="hibernate.default-access" value="property" />
		    <property name="hibernate.hbm2ddl.auto" value="update" />
		    <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
		    <property name="hibernate.archive.autodetection" value="class" />
		    <property name="hibernate.current_session_context_class" value="thread" />
		    <property name="hibernate.connection.pool_size" value="10" />
		    <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
		    <property name="hibernate.bytecode.use_reflection_optimizer" value="true" />

		</properties>
	</persistence-unit>
</persistence>