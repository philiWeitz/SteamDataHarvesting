<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	<persistence-unit name="steamDataHarvesting" transaction-type="RESOURCE_LOCAL">
	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<properties>	
			<!-- Postgresql example -->
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/steamDataHarvesting"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>		
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />


			<!-- General configuration -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		    <property name="hibernate.default-access" value="property" />
		    <property name="hibernate.archive.autodetection" value="class" />
		    <property name="hibernate.current_session_context_class" value="thread" />

			<!-- Thread Pool definition -->
		    <property name="hibernate.connection.pool_size" value="10" />
		    <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
		    <property name="hibernate.bytecode.use_reflection_optimizer" value="true" />

		</properties>
	</persistence-unit>

	<persistence-unit name="steamDataHarvestingTest" transaction-type="RESOURCE_LOCAL">
	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>org.uta.steam.jpa.model.AppData</class>
		<class>org.uta.steam.jpa.model.AppDLC</class>
		<class>org.uta.steam.jpa.model.AppVersion</class>
		<class>org.uta.steam.jpa.model.Review</class>
		<class>org.uta.steam.jpa.model.SteamApp</class>
			
		<properties>
			<!-- Database connection -->
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:steam-data-harvesting" />
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.user" value="" />
			<property name="javax.persistence.jdbc.password" value="" />

		    <property name="hibernate.hbm2ddl.auto" value="update" />
		    <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

		</properties>
	</persistence-unit>
	
</persistence>